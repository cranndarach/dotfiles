{
  "segments": {
    "left": [
      {
        "type": "segment_list",
        "function": "powerline.listers.i3wm.workspace_lister",
        "segments": [
          {
            "function": "powerline.segments.i3wm.workspace"
          }
        ]
      },
      {
        "function": "powerline.segments.i3wm.mode"
      }
    ],
    "right": [
      {
        "function": "powerline.segments.common.players.spotify",
        "name": "player",
        "args": {
          "format": "{state_symbol} {title} - {artist} ({elapsed}/{total})"
        }
      },
      {
        "function": "segments.common.brightness.brightness"
      },
      {
        "function": "powerline.segments.common.bat.battery"
      },
      {
        "function": "powerline.segments.common.bat.battery",
        "args": {
          "gamify": true,
          "steps": 5
        }
      },
      {
        "function": "powerline.segments.common.time.date",
        "args": {
          "format": "%l:%M%P",
          "istime": true
        }
      },
      {
        "function": "powerline.segments.common.time.date",
        "args": {
          "format": "%A, %b %e, %Y"
        }
      }
    ]
  }
}
