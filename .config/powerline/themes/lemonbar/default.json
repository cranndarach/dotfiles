        "steps": 5
      }
      {
        "function": "powerline.segments.common.time",
        "format": "%l:%M%P",
        "istime": true
      },
      {
        "function": "powerline.segments.common.time",
        "format": "%A, %b %e, %Y"
      }
    ]
  }
}
